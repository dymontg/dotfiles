set notification-warning-fg     "#bbc2cf" # Foreground
set notification-bg             "#21242b" # Background dark
set notification-fg             "#bbc2cf" # Foreground

set completion-bg               "#282c34" # Background light
set completion-fg               "#bbc2cf" # Comment
set completion-group-bg         "#21242b" # Background dark
set completion-group-fg         "#bbc2cf" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#f8f8f2" # Foreground

set index-bg                    "#282a34" # Background light
set index-fg                    "#bbc2cf" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#bbc2cf" # Foreground

set inputbar-bg                 "#21242b" # Background dark
set inputbar-fg                 "#bbc2cf" # Foreground
set statusbar-bg                "#21242b" # Background dark
set statusbar-fg                "#bbc2cf" # Foreground

