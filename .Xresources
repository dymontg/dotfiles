!-*- Font settings -*-

! Meslo Setup
!URxvt.allow_bold:      true
!URxvt*font:            xft:Meslo LG L for Powerline:Regular:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Regular:size=12:antialias=true
!URxvt*imFont:          xft:Meslo LG L for Powerline:Regular:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Regular:size=12:antialias=true
!URxvt*boldFont:        xft:Meslo LG L for Powerline:Semibold:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Bold:size=12:antialias=true
!URxvt*boldItalicFont:  xft:Meslo LG L for Powerline:Semibold:Italic:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Bold:Italic:size=12:antialias=true
!URxvt*italicFont:      xft:Meslo LG L for Powerline:Italic:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Italic:size=12:antialias=true
!URxvt*letterSpace: 	  -2


! Source Code Pro
!URxvt.allow_bold:      true
!URxvt*font: 		        xft:Source Code Pro for Powerline:Regular:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Regular:size=12:antialias=true
!URxvt*imFont: 		      xft:Source Code Pro for Powerline:Regular:pixelsize=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Regular:size=12:antialias=true
!URxvt*boldFont: 	      xft:Source Code Pro for Powerline:Semibold:pixelsize=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Bold:size=12:antialias=true
!URxvt*boldItalicFont:  xft:Source Code Pro for Powerline:Semibold:Italic:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Bold:Italic:size=12:antialias=true
!URxvt*italicFont: 	    xft:Source Code Pro for Powerline:Italic:size=12:antialias=true,xft:DejaVu Sans Mono for Powerline:Italic:size=12:antialias=true
!URxvt*letterSpace: 	  -6

! DejaVu Sans Mono Setup                      
!URxvt.allow_bold:      true
!URxvt*font:            xft:DejaVu Sans Mono for Powerline:size=12:antialias=true
!URxvt*imFont:          xft:DejaVu Sans Mono for Powerline:size=12:antialias=true
!URxvt*boldFont:        xft:DejaVu Sans Mono for Powerline:Bold:size=12:antialias=true
!URxvt*boldItalicFont:  xft:DejaVu Sans Mono for Powerline:Bold:Italic:size=12:antialias=true
!URxvt*italicFont:      xft:DejaVu Sans Mono for Powerline:Italic:size=12:antialias=true
!URxvt*letterSpace:     -1

! Ubuntu Mono Setup
!URxvt.allow_bold: true
!URxvt*font:xft:Ubuntu Mono:bold:size=16:antialias=true

! Terminess Nerd Font
URxvt*font:            xft:TerminessTTF Nerd Font Mono:Medium:size=12:antialias=true
URxvt*imFont:          xft:TerminessTTF Nerd Font Mono:Medium:size=12:antialias=true
URxvt*boldFont:        xft:TerminessTTF Nerd Font Mono:Bold:size=12:antialias=true
URxvt*boldItalicFont:  xft:TerminessTTF Nerd Font Mono:Bold:Italic:size=12:antialias=true
URxvt*italicFont:      xft:TerminessTTF Nerd Font Mono:Italic:size=12:antialias=true

! Xft settings
URxvt.depth:                          32
Xft.dpi:                              96
Xft.antialias:                        true
Xft.rgba:                             rgb
Xft.hinting:                          true
Xft.hintstyle:                        hintslight
Xft.autohint:                         false
Xft.lcdfilter:                        lcddefault

!-*- Misc. -*-
URxvt.scrollBar:                      false
URxvt.internalBorder:                 3
URxvt.pointerBlank:                   true
URxvt*cursorBlink:                    true

URxvt*scrollColor:                    #c7ccd1
URxvt*highlightColor:                 #3f4268
URxvt*highlightTextColor:             #908f80

!-*- Color scheme -*-

! Special
URxvt*foreground:                     #908f80
URxvt*background:                     #292b2e
URxvt*cursorColor:                    #eead0e


! Black
!URxvt*color0:                         #22221b !dark
!URxvt*color8:                         #524c59 !light

! Red
URxvt*color1:                         #ff0000
URxvt*color9:                         #ff0000

! Green
URxvt*color2:                         #859900
URxvt*color10:                        #859900

! Yellow
URxvt*color3:                         #eead0e
URxvt*color11:                        #eead0e

! Blue
URxvt*color4:                         #5f9182
URxvt*color12:                        #5f9182

! Magenta
URxvt*color5:                         #6c71c4
URxvt*color13:                        #6c71c4

! Cyan
URxvt*color6:                         #36a166
URxvt*color14:                        #36a166

! White
URxvt*color7:                         #93a1a1
URxvt*color15:                        #fdf6e3


!-*- Perl extensions -*-
URxvt.perl-ext-common:                default,selection-to-clipboard,pasta,matcher,keyboard-select
URxvt.keysym.M-u:                     perl:url-select:select_next
URxvt.url-launcher:                   /usr/bin/qutebrowser
URxvt.underlineURLs:                  True
URxvt.matcher.button:                 1 
URxvt.keysym.M-Escape:                perl:keyboard-select:activate
URxvt.keysym.Control-Shift-V:         perl:pasta:paste
